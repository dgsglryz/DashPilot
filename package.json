{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=20.19.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "vue-tsc && vite build",
        "dev": "vite",
        "lint": "eslint \"resources/js/**/*.{ts,vue}\" --max-warnings=0",
        "test:unit": "vitest",
        "test:unit:ui": "vitest --ui",
        "test:unit:coverage": "vitest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:fast": "NODE_OPTIONS='--max-old-space-size=4096' playwright test",
        "test:e2e:workers": "NODE_OPTIONS='--max-old-space-size=4096' playwright test --workers=16",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report"
    },
    "devDependencies": {
        "@heroicons/vue": "^2.1.1",
        "@inertiajs/vue3": "^2.0.0",
        "@playwright/test": "^1.56.1",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/vue": "^8.1.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "^4.0.9",
        "@vitest/ui": "^4.0.9",
        "@vue/eslint-config-prettier": "^10.0.0",
        "@vue/eslint-config-typescript": "^14.0.0",
        "@vue/test-utils": "^2.4.6",
        "autoprefixer": "^10.4.12",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.12.0",
        "eslint-plugin-vue": "^9.29.1",
        "jsdom": "^27.2.0",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "sass": "^1.94.0",
        "tailwindcss": "^3.2.1",
        "typescript": "^5.6.3",
        "vite": "^7.0.7",
        "vitest": "^4.0.9",
        "vue": "^3.4.0",
        "vue-tsc": "^2.0.24"
    },
    "dependencies": {
        "@codemirror/basic-setup": "^0.20.0",
        "@codemirror/lang-html": "^6.4.11",
        "@codemirror/lang-javascript": "^6.2.4",
        "@codemirror/state": "^6.5.2",
        "@codemirror/theme-one-dark": "^6.1.3",
        "@codemirror/view": "^6.38.7",
        "@inertiajs/progress": "^0.1.2",
        "@vueuse/core": "^14.0.0",
        "chart.js": "^4.5.1",
        "codemirror": "^6.0.2",
        "vue-chartjs": "^5.3.3",
        "vue-toastification": "^2.0.0-rc.5"
    }
}
